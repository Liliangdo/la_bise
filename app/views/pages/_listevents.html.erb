<div class="container">
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to event_path(event) do %>
          <div class="card">
            <div class="card-category">
              <h3>
                <%= event.name %>
              </h3>
            </div>
            <div class="card-user">
              <p>Size : <%= event.height %> x <%= event.width %> </p>
            </div>
            <div class="card-avatar">
              <i class="fa fa-users" aria-hidden="true"></i>
              <p> <%= event.capacity %> </p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
