<div class="container">
  <div class="row">

    <% @events.each do |event| %>

      <div class="col-xs-12 col-sm-4">

        <%= link_to event_path(event) do %>

          <div class="card text-center">
            <div class="card-polaroid">

              <img src="http://www.ledarlington.com/wp-content/uploads/2015/02/happyhour.jpg">

              <div class="card-infos">
                <h3>
                  <%= event.name %>
                </h3>
              </div>

              <p class="card-stats">
                <i class="fa fa-eur"></i> <%=event.price%>
                <i class="fa fa-users"></i> <%=event.available_places%>
                <i class="fa fa-heart"></i> <%=event.mood%>
                </a>
              </p>
            </div>
            <p class="card-author">
              <%=event.id%>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
