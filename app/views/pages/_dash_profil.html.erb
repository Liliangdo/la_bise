<div class="container">
  <div class="row">
      <div class="col-xs-12 col-md-4">
        <div class= "avatar-user-show text-center">
          <%= helper_user_picture_tag(@user)%>
          <p>
            <%= link_to t('.edit'), edit_user_registration_path, class: "btn btn-danger" %>
          </p>
        </div>
        <div class="identification">
            <h3 class="text-center"><%= t('.identification') %></h3>
            <% if @user.birth_date  %>
              <i class="fa fa-check-circle-o" aria-hidden="true"></i> <%= t('.birth_date') %>: <%= l(@user.birth_date, format: :standard) %>
            <% end %>
            <br>
            <i class="fa fa-check-circle-o" aria-hidden="true"></i> <%= t('.phone_number') %>: <%= hidden_phone(@user) %>
            <br>
            <i class="fa fa-check-circle-o" aria-hidden="true"></i> <%= t('.email') %>: <%= hidden_email(@user)%>
            <br>
            <i class="fa fa-check-circle-o" aria-hidden="true"></i> <%= t('.created_at') %>: <%=  l(@user.created_at, format: :standard) %>
            <br>
        </div>
      </div>
      <div class="col-xs-12 col-md-8">
        <div class="welcome">
          <div class="description">
            <h1 class="text-center"><%= t('.welcome') %> <%= @user.first_name %> ! </h1>
            <p><%= @user.description %></p>
          </div>
          <div class="reviews">
            <h2><%= t('.reviews_show', count: @user.reviews.count) %></h2>
            <% @user.reviews.each do |review| %>
              <div class="review-card card-polaroid">
                  <div class="media">
                    <div class="media-left">
                      <%= helper_user_picture_tag(@user)%>
                    </div>
                    <div class="media-body">
                      <strong class="review-owner"><%= review.user.first_name %></strong><%= t('colon') %> <%= review.content %>
                      <br>
                      <span class="review-date"><%= l(review.created_at, format: '%A %d %B') %></span>
                      <div class="review-rating">
                        <%= stars(review.rating) %>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>

