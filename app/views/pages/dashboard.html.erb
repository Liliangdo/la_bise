<div class="container">
  <div class="row">
    <div class="visible-xs hidden-sm">
      <img src="http://placehold.it/100?text=AVATAR"><br>INSERT CURENT USER PHOTO
      <%= current_user.first_name %> <%= current_user.last_name %>
      <div class="identification">
        <%= current_user.email %>
        <%= current_user.phone_number %>
        <%= current_user.birth_date %> - <%= current_user.gender %>
        <%= current_user.birth_date %>
      </div>
      <div class="description">
        <%= current_user.description %>
      </div>
      <a href="#" class="btn btn-info">Edit</a>
    </div>
  </div>
  <div class="row">
    <div class="tabs">
      <a  data-target="#profil" class="hidden-xs col-sm-3 tab active">
        <h3><%= t('.profil') %></h3>
      </a>
      <a  data-target="#messages" class="col-xs-4 col-sm-3 tab mob-cond">
        <h3><%= t('.messages') %></h3>
      </a>
      <a  data-target="#events" class="col-xs-4 col-sm-3 tab">
        <h3><%= t('.events') %></h3>
      </a>
      <a  data-target="#reservations" class="col-xs-4 col-sm-3 tab">
        <h3><%= t('.reservations') %></h3>
      </a>
    </div>
  </div>
</div>

<div class="container">
  <div class="tab-content" id="profil">
    INSERT MY PROFIL VIEW
  </div>
  <div class="tab-content hidden" id="messages">
    INSERT MY MESSAGES INDEX VIEW
  </div>
  <div class="tab-content hidden" id="reservations">
    INSERT MY RESERVATIONS INDEX VIEW
    <%= @reservations.each do |reservation| %>
      <p> User id : <%= reservation.user_id %> </p>
      <p> Event id : <%= reservation.event_id %> </p>
      <p> Accepted at : <%= reservation.accepted_at %> </p>
      <p> Refused at : <%= reservation.refused_at %> </p>
      <p> Canceled at: <%= reservation.canceled_at %> </p>
      <p> Number of guest : <%= reservation.guest %> </p>
    <% end %>
  </div>
  <div class="tab-content hidden" id="events">
    INSERT MY EVENTS EDIT VIEW
    <%= @events.each do |event| %>
      <p> <%= event.user_id %> </p>
      <p> <%= event.name %> </p>
      <p> <%= event.description %> </p>
      <p> <%= event.price %> </p>
      <p> <%= event.mood %> </p>
      <p> <%= event.group_age %> </p>
      <p> <%= event.option %> </p>
      <p> <%= event.house_type %> </p>
      <p> <%= event.capacity %> </p>
      <p> <%= event.starting_at %> </p>
      <p> <%= event.address %> </p>
    <% end %>
  </div>
</div>
