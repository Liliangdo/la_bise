<%= simple_form_for :search, url: events_path, method: :get do |f| %>
  <div class="container">
    <div class="row">

      <div class="col-md-3">
        <%= f.input :city, label: false, placeholder: "Enter a city" %>
      </div>

      <div class='col-md-3'>
        <div class="input-group date">
          <span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span><input type="text" class="form-control">
        </div>
      </div>

      <div class='col-md-3'>
        <%= f.input :capacity, label: false, placeholder: "Capacity" %>
      </div>

      <div class='col-md-3'>
        <%= f.button :submit, "Search", class: "btn btn-danger btn-block" %>
      </div>

    </div>
  </div>
<%end%>
