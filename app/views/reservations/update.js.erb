// collect the number of reservation
<% div_name = 'btn_reservation_' + @reservation.id.to_s %>

// concatene the name of the div : btn_reservation_xx
console.log('<%= div_name %>');
// hide slowly buttons on clic

$btnReservation = $('.<%= div_name %>');

$btnReservation.slideUp();
// Display a letter picture for few seconds, move the letter fast on the top
$btnReservation.html('<i class="fa fa-check-circle-o" aria-hidden="true"></i>');
// Display a setences... Confirmation send
$btnReservation.slideDown().delay( 2000 ).promise().done(function(){
  $btnReservation.text('Accepted at...').slideDown(3000);
});



