// collect the number of reservation
<% div_name = 'btn_reservation_' + @reservation.id.to_s %>

// concatene the name of the div : btn_reservation_xx
console.log('<%= div_name %>');
// hide slowly buttons on clic

$btnReservation = $('#<%= div_name %>');

$btnReservation.hide();
$btnReservation.html('<i class="fa fa-envelope-o" aria-hidden="true"></i>');
$btnReservation.slideDown(1500).promise().done(function(){
$btnReservation.hide();
$btnReservation.text('Réponse envoyée à l\'invité');
$btnReservation.fadeIn(4000);});
