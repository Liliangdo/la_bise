<%= simple_form_for [@event, @reservation] do |f| %>
<%= f.error_notification %>
<%= f.input :guest,
            label: "Nombre de places souhaitées",
            collection: (1..@event.available_places), selected: session[:capacity]
%>

<div class="col-xs-12 col-sm-6 col-md-4">
  <div class="infos" >
    <div class="reservation-results-div" id="price">
     Le prix est de <%= price = @event.price * session[:capacity].to_i %> € <!-- TODO -->
    </div>
    <div class="reservation-results-div" id="fees">
      Les frais sont de <%= fees = (price * 0.15).round %> € <!-- TODO -->
    </div>
    <div class="reservation-results-div" id="total-price">
      Le montant total est de <%= price + fees %> € <!-- TODO -->
    </div>
  </div>
</div>
<%= f.button :submit, class: "btn btn-warning btn-block" %>
<% end %>

