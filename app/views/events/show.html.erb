<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= link_to "Book", new_event_reservation_path(params[:id]), class: "btn btn-warning btn-block", id: "bottom-btn" %>
    </div>
    <div class="col-xs-12">
      SLID IMAGE
      <h4><%= @event.name %></h4>
    </div>
    <div class="col-xs-6">
      <div>
        <img src="http://placehold.it/100?text=AVATAR">
      </div>
      <div>
        <%= @event.user.first_name %>
        <br>
        <%= ((Date.today - @event.user.birth_date.to_date).to_i / 365.25).to_i %> years old
        <br>
        <%= link_to "Conctact", new_event_message_path(params[:id]), class: "btn btn-warning btn-block" %>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="infos">
        <%= l @event.starting_at, format: '%A %d %B | %H:%M' %>
      </div>
      <p>Price/pers: <%= @event.price %> â‚¬</p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      EVENT options<br>
      EVENT options<br>
      EVENT options<br>
      EVENT options<br>
    </div>
    <div class="col-xs-6">
      EVENT options<br>
      EVENT options<br>
      EVENT options<br>
      EVENT options<br>
    </div>
    <div class="cols-xs-12">
      <div class="description">
        <%= @event.description %>
      </div>
      <div class="reviews">
        <%= @event.user.first_name %> has <% if @event.reviews.count == 0%>
          <%= "no review yet" %>
        <% elsif @event.reviews.count == 1 %>
          1 <%= "review" %>
        <% else %>
          <%= @event.reviews.count %> <%= "reviews" %>
        <% end %>
         - MOYENNE :
        <% sum = 0 %>
        <% @event.reviews.each do |review| %>
          <% sum += review.rating %>
        <% end %>
        <%= (sum / @event.reviews.count).round %>
        <div class="review-card">
          <% @event.reviews.each do |review| %>
            <%= review.content %>
            <%= review.rating %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="cols-xs-12 bottom-space"></div>
  </div>
</div>
