<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= link_to "Book", new_event_reservation_path(params[:id]), class: "btn btn-warning btn-block", id: "bottom-btn" %>
    </div>
    <div class="col-xs-12">
      SLID IMAGE
      <h4><%= @event.name %></h4>
    </div>
    <div class="col-xs-6">
      <div>
        <img src="http://placehold.it/100?text=AVATAR">
      </div>
      <div>
        <%= @event.user.first_name %><br>
        <%= ((Date.today - @event.user.birth_date.to_date).to_i / 365.25).to_i %> years old
      </div>
    </div>
    <div class="col-xs-6">
      <div class="infos">
        <%= l @event.starting_at, format: '%A %d %B | %H:%M' %>
      </div>
      <p>Price/pers: <%= @event.price %> â‚¬</p>
    </div>
    <div class="col-xs-12">
      <%= link_to "New Message", new_event_message_path(params[:id]), class: "btn btn-warning btn-block" %>
    </div>
</div>
