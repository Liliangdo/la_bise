<div class="container">
  <div class="row">
    <div id="form-registration" class="col-xs-12 col-sm-offset-4 col-sm-4">
      <h2><%= t('.sign_in', :default => "Sign in") %></h2>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div><%= f.label :email %><br />
        <%= f.email_field :email, class: "glowing-border" %></div>

        <div><%= f.label :password %><br />
        <%= f.password_field :password, class: "glowing-border" %></div>

        <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div><%= f.button :submit, class: "btn btn-block btn-success" %></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

