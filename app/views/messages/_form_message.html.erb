<%= simple_form_for [event, message] do |f| %>
  <%= f.error_notification %>
    <% if message.errors.any? %>
      <%= message.errors.full_messages.join(" ") %>
     <% end %>
  <%= f.input :content, label: t('.your_message') %>
  <%= f.input :recipient_id, as: :hidden, input_html: {value: event.user_id} %>
  <%= f.input :sender_id, as: :hidden, input_html: { value: current_user.id } %>
  <%= f.button :submit, t('.send'), class: "space btn-block btn-primary" %>
<% end %>
